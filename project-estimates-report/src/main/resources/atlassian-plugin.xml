<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2"> 
  <plugin-info> 
    <description>${project.description}</description>  
    <version>${project.version}</version>  
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>  
    <param name="plugin-icon">images/pluginIcon.png</param>  
    <param name="plugin-logo">images/pluginLogo.png</param> 
  </plugin-info>  
  <!-- add our i18n resource -->  
  <resource type="i18n" name="i18n" location="project-estimates-report"/>  
  <!-- add our web resources -->  
  <web-resource key="${project.artifactId}-resources" name="${project.artifactId} Web Resources"> 
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="project-estimates-report.css" location="/css/project-estimates-report.css"/>  
    <resource type="download" name="project-estimates-report.js" location="/js/project-estimates-report.js"/>  
    <resource type="download" name="images/" location="/images"/>  
    <context>project.estimates.report.plugin.resources</context> 
  </web-resource>  
  <!-- Project Estimates Report -->  
  <report name="Project Estimates vs Actual Report" i18n-name-key="time-estimates-report.name" key="time-estimates-report" class="com.tadigital.jira.plugin.report.TimeEstimatesReport"> 
    <description key="time-estimates-report.description">The Time Estimates Report Plugin</description>  
    <resource name="view" type="velocity" location="/templates/reports/time-estimates-report/view.vm"/>  
    <resource name="excel" type="velocity" location="/templates/reports/time-estimates-report/excel/excel.vm" />  
    <resource name="i18n" type="i18n" location="TimeEstimatesReport"/>  
    <label key="time-estimates-report.label"/>  
    <!-- the properties of this report which the user must select before running it -->  
    <properties> 
      <property> 
        <key>projectValues</key>  
        <name>report.project.include</name>  
        <description>report.project.include.description</description>  
        <type>select</type>  
        <i18n>false</i18n>  
        <values class="com.tadigital.jira.valuegenerator.ProjectValuesGenerator"/> 
      </property> 
    </properties> 
  </report>  
  <!-- Delivery Head Estimates Report -->  
  <report name="Delivery Head Estimates Report" i18n-name-key="delivery-head-estimates-report.name" key="delivery-head-estimates-report" class="com.tadigital.jira.plugin.report.deliveryheadestimates.DeliveryHeadEstimatesReport"> 
    <description key="delivery-head-estimates-report.description">The Delivery Head Estimates Report Plugin</description>  
    <resource name="view" type="velocity" location="/templates/reports/delivery-head-estimates-report/view.vm"/>
    <resource name="excel" type="velocity" location="/templates/reports/delivery-head-estimates-report/excel/excel.vm" />  
    <resource name="i18n" type="i18n" location="DeliveryHeadEstimatesReport"/>  
    <label key="delivery-head-estimates-report.label"/>  
    <!-- the properties of this report which the user must select before running it -->  
    <properties> 
      <property> 
        <key>projectCategoryValues</key>  
        <name>Select Category :</name>  
        <description>delivery-heads-estimates-description</description>  
        <type>select</type>  
        <i18n>false</i18n>  
        <values class="com.tadigital.jira.plugin.report.valuegenerator.ProjectCategoryPicker"/> 
      </property> 
    </properties> 
  </report>  
  <report name="Practice Manager Estimates Report" i18n-name-key="practice-manager-estimates-report.name" key="practice-manager-estimates-report" class="com.tadigital.jira.plugin.report.practicemanagerestimates.PracticeManagerEstimatesReport"> 
    <description key="practice-manager-estimates-report.description">The Practice Manager Estimates Report Plugin</description>  
    <resource name="view" type="velocity" location="/templates/reports/practice-manager-estimates-report/view.vm"/>
    <resource name="excel" type="velocity" location="/templates/reports/practice-manager-estimates-report/excel/excel.vm" />  
    <resource name="i18n" type="i18n" location="PracticeManagerEstimatesReport"/>  
    <label key="practice-manager-estimates-report.label"></label>    
    <properties>
			<property>
				<key>practice</key>
				<name>Select Practice * :</name>
				<description>project-estimates-report-practice-manager.practiceselection</description>
				<type>select</type>
				<i18n>false</i18n>
				<values
					class="com.tadigital.jira.valuegenerator.PracticeDropdownValuesGenerator" />
			</property>
			<property>
				<key>band</key>
				<name>Select Band :</name>
				<description>project-estimates-report-practice-manager.designationselection</description>
				<type>select</type>
				<i18n>false</i18n>
				<values
					class="com.tadigital.jira.valuegenerator.DesignationDropdownValuesGenerator" />
			</property>
			<property>
				<key>from</key>
				<name>Select From :</name>
				<description>project-estimates-report-practice-manager.fromdate</description>
				<type>date</type>
				<i18n>false</i18n>
			</property>
			<property>
				<key>to</key>
				<name>Select To :</name>
				<description>project-estimates-report-practice-manager.todate</description>
				<type>date</type>
				<i18n>false</i18n>
			</property>
		</properties> 
  </report>
</atlassian-plugin>
